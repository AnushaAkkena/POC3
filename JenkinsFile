pipeline {
    agent any
    tools {
        maven 'maven'
    }
   environment {
       SONAR_HOST_URL ='http://16.176.169.240:9000/'
       SONAR_AUTH_TOKEN = credentials('sonarqube')
  }
 
    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/AnushaAkkena/POC3.git' , branch : 'main'
            }
        }
 
        stage('Maven Build') {
            steps {
                sh 'mvn clean package'
            }
        }

      stage('Test') {
           steps {
               sh 'mvn test'
           }
      }
     stage('SonarQube Analysis') {
           steps {
               sh 'mvn sonaradmin:sonaradmin -Dsonar.projectKey=sample_project -Dsonar.host.url=$SONAR_HOST_URL -Dsonar.auth.token=$SONAR_AUTH_TOKEN'
           }
      }
 
        stage('Docker Build') {
            steps {
                sh 'docker build -t firstproject:latest .'
            }
        }
 
        stage('Docker Run') {
            steps {
                sh '''
                    docker run -d --name myapp -p 80:8080 firstproject:latest
                '''
            }
        }
    }
}
